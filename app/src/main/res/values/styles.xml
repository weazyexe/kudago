<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorRed</item>
        <item name="colorPrimaryVariant">@color/colorDarkRed</item>
        <item name="colorSecondary">@color/colorRed</item>
        <item name="colorSecondaryVariant">@color/colorDarkRed</item>
        <item name="colorError">@color/colorBerryRed</item>
        <item name="android:colorBackground">@color/colorWhite</item>
        <item name="colorSurface">@color/colorWhite</item>
        <item name="colorOnBackground">@color/colorBlack</item>
        <item name="colorOnSurface">@color/colorBlack</item>
        <item name="colorOnError">@color/colorWhite</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

</resources>
